@model IEnumerable<Category>
@{
    ViewData["Title"] = "Home P";
}

<div class="text-center">
    <h1 class="display-4">Category</h1>
    <p>Learn about <a href="https://clickandgrab.co.uk">Web Shop
    </a>.</p>
</div>
<div>
    <table class="table table-bordered">
        <thead>
        <tr>
            <th>
                Category Name
            </th>
            <th>
                Display Order
            </th>
            <th>
                Time
            </th>
        </tr>
        </thead>
        <tbody>
        @foreach (var obj in Model)
        {
            <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="30%">
                    @obj.DisplayOrder
                </td>
                <td width="30%">
                    @obj.CreatedTime
                </td>
            </tr>
        }
        </tbody>
    </table>

</div>