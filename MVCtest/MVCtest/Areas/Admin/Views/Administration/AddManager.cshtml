@model MVCtest.Core.Models.Administration.ManagerModel
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />

                <div class="text-center mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button class="btn btn-primary " onclick="">Find by Email</button>
                </div>
            </form>
        </section>
    </div>
</div>

@{
    ViewData["Title"] = "Create new Manager";
}

<h1 class="text-center">@ViewData["Title"]</h1>
<div class="row">
    <div class="col-md-4 offset-md-4">
        <section>
            <form id="account" method="post">
                <hr />

                <div class="text-center mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>

                    <div class="text-center">
                        <button class="btn btn-primary " onclick="">Find by Email</button>
                    </div>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.LastName" class="form-label"></label>
                    <input asp-for="@Model.LastName" class="form-control" />
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.PhoneNumber" class="form-label"></label>
                    <input asp-for="@Model.PhoneNumber" class="form-select" />
                    <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Email" class="form-label"></label>
                    <input asp-for="@Model.Email" class="form-control" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
                <div class="text-center mb-3">
                    <label asp-for="@Model.Departments" class="form-label"></label>
                    <input asp-for="@Model.Departments" class="form-control" />
                    <span asp-validation-for="Departments" class="text-danger"></span>
                </div>
                <div class="text-center">
                    <button type="submit" class="btn btn-primary">ADD Manager</button>
                </div>
            </form>
        </section>
    </div>
</div>